@model DrieUnityGrage.Models.HOADON

@{
    ViewBag.Title = "Tạo hoá đơn";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6" style="text-align:center">
            <h2>Thêm hoá đơn</h2>
        </div>
        <div class="col-lg-3"></div>
    </div>

    <p style="font-size:20px; font-weight:bold">Thông tin chung:</p>
    @using (Html.BeginForm("TaoHoaDon", "HOADON"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row" style="font-size:17px; margin:0">
            <div class="col-lg-3" style="padding-left:50px">
                Mã hoá đơn:
                <div class="form-control" style="display:inline;">@ViewBag.MaHD</div>
                @{Session["MaHD"] = ViewBag.MaHD;}
            </div>
            <div class="col-lg-4">
                Ngày lập hoá đơn:
                <div class="form-control" style="display:inline">
                    @ViewBag.NgayLapHD
                </div>
            </div>
            <div class="dis-inline col-lg-3" style="margin-top:-6PX">
                Mã tiếp nhận:
                @Html.DropDownList("HD_MaTN", null, htmlAttributes: new { @class = "dis-inline form-maTN " })
                @Html.ValidationMessageFor(model => model.HD_MaTN, "", new { @class = "text-danger" })
            </div>
            <div class="dis-inline col-lg-2" style="margin-top:-6px">
                <input type="submit" value="Lấy thông tin" class="btn btn-primary" />
            </div>
        </div>

    }


    <div class="row" style="margin-top: 30px; font-size: 17px; margin-left:0; margin-right:0">

        @if (Session["CheckTN"] != null)
        {

            <div class="col-lg-3" style="padding-left:50px">
                Khách hàng:
                <div class="form-control" style="display:inline">@Model.HD_MaTN</div>
            </div>
            <div class="col-lg-4">
                Số điện thoại: <div class="form-control" style="display:inline"> </div>

            </div>
            <div class="col-lg-3" style="margin-left:0; margin-right:0px">
                Nhân viên:
                <div class="form-control" style="display:inline"> </div>

            </div>

        }
        else
        {
            @*            <div class="col-lg-3" style="margin-left:50px">
                    Khách hàng:
                    <div class="form-control" style="display:inline"></div>
                </div>
                <div class="col-lg-4">
                    Số điện thoại:
                    <div class="form-control" style="display:inline"> </div>

                </div>
                <div class="col-lg-3">
                    Nhân viên:
                    <div class="form-control" style="display:inline"> </div>
                </div>
            *@   }
    </div>


    <div class="row" style="margin-top:40px">
        <div class="col-lg-9">
            @Html.Action("Partial_LayChiTietHoaDon", "HOADON")

        </div>
        <div class="col-lg-3">

            @Html.Action("Partial_ThemChiTietHoaDon", "HOADON")


        </div>
    </div>
    <div class="row" style="margin-top:15px">
        <div class="col-lg-5 align-bottom">
            @Html.ActionLink("< Quay về", "LayDanhSachHoaDon", null, new { @class = "nonedecor" })
        </div>
        <div class="col-lg-7">
            <input type="submit" value="Tạo mới" class="btn btn-info create-btn" />

        </div>
    </div>
</div>

