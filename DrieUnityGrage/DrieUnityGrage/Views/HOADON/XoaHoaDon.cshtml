@model DrieUnityGrage.Models.HOADON

@{
    ViewBag.Title = "Xoá hoá đơn";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6" style="text-align:center">
            <h2>Cập nhật thông tin hoá đơn</h2>
        </div>
        <div class="col-lg-3"></div>
    </div>

    <p style="font-size:20px; font-weight:bold">Thông tin chung:</p>
    <div class="row" style="font-size:17px; margin:0">
        <div class="col-lg-4" style="padding-left:50px">
            Mã hoá đơn:
            <div class="form-control" style="display:inline;">@Model.MaHD</div>
        </div>
        <div class="col-lg-4">
            Ngày lập hoá đơn:
            <div class="form-control" style="display:inline">
                @Model.NgayLap
            </div>
        </div>

        <div class="col-lg-4">
            Mã tiếp nhận:
            <div class="form-control" style="display:inline">
                @Model.HD_MaTN
            </div>
        </div>

    </div>
    <div class="row" style="margin-top: 30px; font-size: 17px; margin-left:0; margin-right:0">

        <div class="col-lg-4" style="padding-left:50px">
            Khách hàng:
            <div class="form-control" style="display:inline">@ViewBag.KhachHang</div>
        </div>
        <div class="col-lg-4">
            Số điện thoại: <div class="form-control" style="display:inline">@ViewBag.SDT </div>

        </div>
        <div class="col-lg-4" style="margin-left:0; margin-right:0px">
            Nhân viên:
            <div class="form-control" style="display:inline">@ViewBag.NhanVien </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-default" />
        </div>
    </div>

    @Html.Action("Partial_LayChiTietHoaDonDB", "HOADON", new { id = Model.MaHD })

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "LayDanhSachHoaDon")
        </div>
    }
</div>
