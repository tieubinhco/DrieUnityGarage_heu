@model IEnumerable<DrieUnityGrage.Models.NHACUNGCAP>

@{
    ViewBag.Title = "Quản lý nhà cung cấp";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="container-fluid" style="margin-top:20px;">
    <div class="row">
        <div class="col-lg-5">
            <h2>Danh sách nhà cung cấp </h2>
        </div>
        <div class="col-lg-5">
        </div>
        <div class="col-lg-2">
            @Html.ActionLink("Create New", "Create")
        </div>
    </div>


</div>

<table class="table">

    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MaNCC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TenNCC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DiaChiNCC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DienThoaiNCC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaSoThueNCC)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LoaiHinh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HoTenNguoiDaiDien)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <th>
                @Html.DisplayFor(modelItem => item.MaNCC)
            </th>
            <td>
                @Html.DisplayFor(modelItem => item.TenNCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DiaChiNCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DienThoaiNCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaSoThueNCC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiHinh)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HoTenNguoiDaiDien)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MaNCC }) |
                @Html.ActionLink("Details", "Details", new { id = item.MaNCC }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MaNCC })
            </td>
        </tr>
    }

</table>
