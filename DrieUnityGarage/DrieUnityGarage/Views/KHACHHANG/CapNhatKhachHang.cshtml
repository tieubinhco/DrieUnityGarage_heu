@model DrieUnityGarage.Models.KHACHHANG
@{
    ViewBag.Title = "CapNhatKhachHang";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-12" style="text-align:center; ">
            <h2>Cập nhật thông tin khách hàng</h2>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        <div class="container col-6" style="margin-top: 10px; font-size:17px;">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaKH)
            @Html.HiddenFor(model => model.DiemThanhVien)
            <hr />
            <div class="form-group mb-3">
                <label for="MaNV" class="form-label"> Mã nhân viên: </label>
                <input class="form-control" id="MaNV" value="@Model.MaKH" disabled />
            </div>

            <div class="form-group mb-3">
                <label for="HoTenNV" class="form-label"> Họ tên Khách hàng: </label>
                @Html.EditorFor(model => model.HoTenKH, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.HoTenKH, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                <label for="DienThoaiKH" class="form-label"> Số điện thoại: </label>
                <input type="tel" id="DienThoaiKH" name="DienThoaiKH" required class="form-control" pattern="[0-9]{10}" placeholder="0955021452" value="@Model.DienThoaiKH">

            </div>

            <div class="form-group mb-3">
                <label for="NgaySinh" class="form-label"> Ngày tháng năm sinh: </label>
                <div class="col-12">
                    <input type="date" id="NgaySinh" name="NgaySinh" required class="form-control" value="@ViewBag.NgaySinh">
                </div>
            </div>
            @{ var lstGioiTinh = new List<SelectListItem>
        ()
                {
                new SelectListItem()
                {
                Text ="Nam",
                Value ="Nam"
                },
                new SelectListItem()
                {
                Text = "Nữ",
                Value = "Nữ"
                }
                };
            }

            <div class="form-group mb-3">
                <label for="GioiTinh" class="form-label"> Giới tính: </label>
                @Html.DropDownList("GioiTinh", lstGioiTinh, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                <label for="Email" class="form-label"> Email:</label>
                <input type="email" id="Email" name="Email" readonly class="form-control" placeholder="abc@gmail.com" value="@Model.Email">
            </div>
            <div class="form-group mb-3">
                <label for="DiaChi" class="form-label"> Địa chỉ:</label>
                <textarea class="form-control" id="DiaChi" name="DiaChi" rows="2" required>@Model.DiaChi</textarea>

            </div>
        </div>
        <div class="row" style="padding-bottom:10px;">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="row" style="margin:auto">
                    <div class="col-4">
                        @Html.ActionLink("< Quay về", "LayDanhSachKhachHang", null, new { @class = "btn-back" })
                    </div>
                    <div class="col-4" style="text-align:center">
                        <input type="submit" value="Lưu chỉnh sửa" class="btn btn-success" />
                    </div>
                    <div class="col-4"></div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>

    }
</div>


