@model DrieUnityGarage.Models.THONGTINTIEPNHAN

@{
    ViewBag.Title = "Xoá thông tin tiếp nhận";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />
<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-12" style="text-align:center">
            <h2 style="color: red">Xác nhận xoá thông tin</h2>
        </div>
    </div>
    <div class="container col-6" style="margin-top: 10px; font-size:17px;">
        <hr />
        <div class="form-group mb-3">
            <label for="TN_MaNV" class="form-label"> Nhân viên phụ trách: </label>
            <div class="col-12 form-control">
                @Html.DisplayFor(model => model.TN_MaNV)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="TN_MaKH" class="form-label"> Khách hàng: </label>
            <div class="col-12 form-control">
                @Html.DisplayFor(model => model.TN_MaKH)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="TN_BienSoXe" class="form-label"> Biển số xe: </label>
            <div class="col-12 form-control">
                @Html.DisplayFor(model => model.TN_BienSoXe)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="ThoiGianTiepNhan" class="form-label"> Thời gian tiếp nhận: </label>
            <div class="col-12 form-control">
                @String.Format("{0: HH:mm:ss, dd/MM/yyyy}", @Model.ThoiGianTiepNhan)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="ThoiGianGiaoDuKien" class="form-label"> Ngày giao dự kiến: </label>
            <div class="col-12 form-control">
                @String.Format("{0: dd/MM/yyyy}", @Model.ThoiGianGiaoDuKien)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="GhiChuKH" class="form-label"> Ghi chú của khách hàng: </label>
            <textarea class="col-12 form-control" rows="3" disabled style="background-color:white">@Model.GhiChuKH.Trim()</textarea>
        </div>


    </div>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="row" style="padding-bottom:10px;">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="row" style="margin:0">
                    <div class="col-4">
                        <img src="~/Images/Icon/iconBack.png" style="width:10%; height:40%" />
                        @Html.ActionLink("Quay về", "LayDanhSachThongTinTiepNhan", null, new { @class = "btn-back" })
                    </div>
                    <div class="col-4" style="text-align:center">
                        <input type="submit" value="Xác nhận xoá" class="btn btn-danger" />
                    </div>
                    <div class="col-4"></div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>
    }
</div>
