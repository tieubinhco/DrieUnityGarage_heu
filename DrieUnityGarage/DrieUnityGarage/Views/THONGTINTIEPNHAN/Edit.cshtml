@model DrieUnityGarage.Models.THONGTINTIEPNHAN

@{
    ViewBag.Title = "Chỉnh sửa thông tin tiếp nhận xe";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />
<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6" style="text-align:center">
            <h2>Chỉnh sửa thông tin tiếp nhận xe</h2>
        </div>
        <div class="col-lg-3"></div>
    </div>
    @using (Html.BeginForm())
    {
        <div class="container col-6">


            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.MaTN)
                @Html.HiddenFor(model => model.TN_MaNV)
                @Html.HiddenFor(model => model.ThoiGianTiepNhan)
                @Html.HiddenFor(model => model.TrangThai)
                <div class="form-group mb-3">
                    <label for="ThoiGianTiepNhan" class="form-label"> Thời gian tiếp nhận: </label>

                    <div class="col-12 form-control">
                        @String.Format("{0: HH:mm:ss, dd/MM/yyyy}", @Model.ThoiGianTiepNhan)
                        @Html.ValidationMessageFor(model => model.ThoiGianTiepNhan, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="TN_MaNV" class="form-label"> Nhân viên phụ trách: </label>
                    <div class="col-12 form-control">
                        @Model.TN_MaNV
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="TN_MaKH" class="form-label"> Khách hàng: </label>
                    <div class="col-12">
                        @Html.DropDownList("TN_MaKH", null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TN_MaKH, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group mb-3">
                    <label for="lstXe" class="form-label"> Phương tiện: </label>
                    <div class="col-12">
                        @Html.DropDownList("lstXe", null, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TN_BienSoXe, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group mb-3">
                    <label for="ThoiGianDuKien" class="form-label"> Dự kiến giao xe: </label>

                    <div class="col-12">
                        <input type="date" id="ThoiGianDuKien" name="ThoiGianDuKien" class="form-control" value="@ViewBag.ThoiGianGiaoDuKien">
                    </div>
                </div>
            </div>
            <div class="form-group mb-3">
                <label for="GhiChuKH" class="form-label"> Ghi chú của khách hàng: </label>
                <div class="col-12">
                    @Html.TextAreaFor(model => model.GhiChuKH, 3, 1, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GhiChuKH, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>
        <div class="row" style="padding-bottom:10px;">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="row" style="margin:0">
                    <div class="col-4">
                        <img src="~/Images/Icon/iconBack.png" style="width:10%; height:40%" />
                        @Html.ActionLink("Quay về", "Index", null, new { @class = "btn-back" })
                    </div>
                    <div class="col-4" style="text-align:center">
                        <input type="submit" value="Lưu chỉnh sửa" class="btn btn-primary" />
                    </div>
                    <div class="col-4"></div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>
    }

</div>
    