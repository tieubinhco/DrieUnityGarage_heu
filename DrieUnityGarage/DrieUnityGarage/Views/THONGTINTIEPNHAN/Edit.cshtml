@model DrieUnityGarage.Models.THONGTINTIEPNHAN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6" style="text-align:center">
            <h2>Chỉnh sửa thông tin nhà cung cấp</h2>
        </div>
        <div class="col-lg-3"></div>
    </div>
    <div class="container col-6">

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.MaTN)

            <div class="form-group mb-3">
                <label for="TN_MaNV" class="form-label"> Nhân viên phụ trách: </label>
                <div class="col-12 form-control">
                    @Model.TN_MaNV
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="TN_MaKH" class="form-label"> Khách hàng: </label>
                <div class="col-12">
                    @Html.DropDownList("TN_MaKH", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TN_MaKH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="lstXe" class="form-label"> Phương tiện: </label>
                <div class="col-12">
                    @Html.DropDownList("lstXe", null, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TN_BienSoXe, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group mb-3">
                <label for="ThoiGianTiepNhan" class="form-label"> Phương tiện: </label>

                <div class="col-12 form-control">
                    @String.Format("{0:dd/MM/yyyy}", @Model.ThoiGianTiepNhan)
                    @Html.ValidationMessageFor(model => model.ThoiGianTiepNhan, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group mb-3">
                <label for="ThoiGianGiaoDuKien" class="form-label"> Phương tiện: </label>
                <script>
                    $(function () {
                        $('#ThoiGianGiaoDuKien').datepicker({
                            dateFormat: "dd/mm/yyyy",
                            autoclose: true
                        })
                    })
                </script>
                <div class="col-12">
                    <input type="date" name="ThoiGianGiaoDuKien" id="ThoiGianGiaoDuKien" class="form-control" value="ViewBag.ThoiGianGiaoDuKien">
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GhiChuKH, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GhiChuKH, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.GhiChuKH, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </div>
        </div>
        }

        <div>
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>