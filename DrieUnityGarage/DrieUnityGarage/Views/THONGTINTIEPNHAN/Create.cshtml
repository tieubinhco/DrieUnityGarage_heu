    <p style="font-size:20px; font-weight:bold">Thông tin chung:</p>

    @using (Html.BeginForm("TaoTTTN_LayThongTinXe", "THONGTINTIEPNHAN"))
    {
        <div class="row" style="font-size:17px; margin:0">
            <div class="col-lg-3" style="padding-left:50px">
                Mã tiếp nhận:
                <div class="form-control" style="display: inline;">@ViewBag.MaTN</div>
            </div>
            <div class="col-lg-3">
                Thời gian tiếp nhận:
                <div class="form-control" style="display: inline">
                    @ViewBag.ThoiGianTiepNhan
                </div>
            </div>
            @if (Session["DaLayThongTinXe"] != null)
            {
                <div class="col-lg-4">
                    Khách hàng:
                    <div class="form-control" style="display: inline">
                        @ViewBag.selectedKhachHang
                    </div>
                </div>


            }
            else
            {
                <div class="col-lg-4" style="margin-top: -6PX; display: inline">
                    Khách hàng:
                    @Html.DropDownList("lstMaKH", null, htmlAttributes: new { @class = "form-maTN" })
                </div>
                <div class="dis-inline col-lg-1" style="margin-top:-6px">
                    <input type="submit" value="Lấy thông tin xe" class="btn btn-primary" />
                </div>
            }
        </div>

    }
    @if (Session["DaLayThongTinXe"] != null)
    {
        @Html.DropDownList("lstXe", null, htmlAttributes: new { @class = "form-maTN" })

