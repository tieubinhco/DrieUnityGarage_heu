@model DrieUnityGarage.Models.THONGTINTIEPNHAN

@{
    ViewBag.Title = "Tạo thông tin tiếp nhận phương tiện";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px;">
    <div class="row">
        <div class="col-lg-12" style="text-align:center; ">
            <h2>Tạo thông tin tiếp nhận xe vào Garage</h2>
        </div>
    </div>
    @using (Html.BeginForm("TaoTTTN_LayThongTinXe", "THONGTINTIEPNHAN"))
    {
        <div class="row row-general-info-field">
            <div class="col-3"></div>
            <div class="col-6">
                @*Đã nhấn lấy thông tin xe*@
                @if (Session["DaLayThongTinXe"] != null)
                {
                    <div class="mb-3">
                        @* Mã tiếp nhận:<div class="form-maTN100" style="">@ViewBag.MaTN</div>*@
                        <label for="MaTiepNhan" class="form-label"> Mã tiếp nhận: </label>
                        <div class="form-control" id="MaTiepNhan">@ViewBag.MaTN</div>
                    </div>
                    <div class="mb-3">
                        @*<div class="form-maTN60" >@ViewBag.ThoiGianTiepNhan</div>*@
                        <label for="ThoiGianTiepNhan" class="form-label"> Thời gian tiếp nhận: </label>
                        <div class="form-control" id="ThoiGianTiepNhan">@ViewBag.ThoiGianTiepNhan</div>
                    </div>
                    <div class="mb-3">
                        @*Dự kiến giao hàng:<input type="date" name="q" id="txtFrom" class="form-maTN60 " value="2019-07-18">*@
                        <label class="form-label"> Dự kiến giao xe: </label>
                        <div class="form-control">@ViewBag.ThoiGianGiaoXe</div>
                    </div>

                    <div class="mb-3">
                        @* Khách hàng:<div class="form-maTN60">@ViewBag.selectedKhachHang </div>*@
                        <label for="KhachHang" class="form-label"> Khách hàng: </label>
                        <div class="form-control" id="KhachHang">@ViewBag.selectedKhachHang</div>
                    </div>
                }
                else
                {
                    <div class="mb-3">
                        @* Mã tiếp nhận:<div class="form-maTN100" style="">@ViewBag.MaTN</div>*@
                        <label for="MaTiepNhan" class="form-label"> Mã tiếp nhận: </label>
                        <div class="form-control" id="MaTiepNhan">@ViewBag.MaTN</div>
                    </div>

                    <div class="mb-3">
                        @*Thời gian tiếp nhận:<div class="form-maTN60">@ViewBag.ThoiGianTiepNhan</div>*@
                        <label for="ThoiGianTiepNhan" class="form-label"> Thời gian tiếp nhận: </label>
                        <div class="form-control" id="ThoiGianTiepNhan">@ViewBag.ThoiGianTiepNhan</div>
                    </div>
                    <div class="mb-3">
                        @*Dự kiến giao hàng:<input type="date" name="q" id="txtFrom" class="form-maTN60 " value="2019-07-18">*@
                        <script>
                            $(function () {
                                $('#thoiGianGiaoXe').datepicker({
                                    autoclose: true
                                })
                            })
                        </script>

                        <label class="form-label"> Dự kiến giao xe: </label>
                        <input type="date" name="thoiGianGiaoXe" id="thoiGianGiaoXe" class="form-control" value="dd/MM/yyyy" required>
                    </div>

                    <div class="mb-3">
                        @*Khách hàng: @Html.DropDownList("lstMaKH", null, htmlAttributes: new { @class = "form-maTN" })*@
                        <label class="form-label"> Khách hàng: </label>
                        @Html.DropDownList("lstMaKH", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="mb-3 row" style="margin-left:0;margin-right:0; margin-top:30px;">
                        <div class="col-3"></div>
                        <input type="submit" value="Lấy danh sách xe" class="col-6 btn btn-primary" />
                        <div class="col-3"></div>
                    </div>
                }
            </div>
            <div class="col-3"></div>
        </div>
    }
    @if (Session["DaLayThongTinXe"] != null)
    {
        using (Html.BeginForm("Create", "THONGTINTIEPNHAN"))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="row" style="margin:0; padding:0">
                <div class="col-3"></div>
                <div class="col-6">
                    <div class="mb-3">
                        @*Phương tiện:@Html.DropDownList("lstXe", null, htmlAttributes: new { @class = "form-maTN60" })*@
                        <label class="form-label"> Phương tiện: </label>
                        @Html.DropDownList("lstXe", null, htmlAttributes: new { @class = "form-control" })
                    </div>
                    <div class="mb-4">
                        @*Ghi chú: <input type="text" name="q" id="txtFrom" class="form-maTN60 input-lg" >*@
                        <label class="form-label" for="GhiChuKH"> Ghi chú của khách hàng: </label>
                        <textarea type="text" id="GhiChuKH" name="GhiChuKH" class="form-control" rows="3"></textarea>
                    </div>
                </div>
                <div class="col-3"></div>

            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Tạo thông tin" class="btn btn-default" />
                </div>
            </div>

        }

    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
