@model DrieUnityGarage.Models.NHANVIEN

@{
    ViewBag.Title = "ThemNhanVien";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-12" style="text-align:center; ">
            <h2>Tạo hồ sơ nhân viên </h2>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        <div class="container col-6" style="margin-top: 10px; font-size:17px;">

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, null, new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TenDangNhap)
            @Html.HiddenFor(model => model.MatKhau)
            @Html.HiddenFor(model => model.NgayTaoTK)

            <hr />
            <div class="form-group mb-3">
                <label for="MaNV" class="form-label"> Mã nhân viên: </label>
                <input class="form-control" id="MaNV" name="MaNV" value="@ViewBag.MaNV" disabled />
            </div>

            <div class="form-group mb-3">
                <label for="HoTenNV" class="form-label"> Họ tên nhân viên: </label>
                @Html.EditorFor(model => model.HoTenNV, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.HoTenNV, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                <label for="DienThoaiNV" class="form-label"> Số điện thoại: </label>
                <input type="tel" id="DienThoaiNV" name="DienThoaiNV" required class="form-control" pattern="[0-9]{10}" placeholder="0955021452">

            </div>

            <div class="form-group mb-3">
                <label for="NgaySinh" class="form-label"> Ngày tháng năm sinh: </label>
                <div class="col-12">
                    <input type="date" id="NgaySinh" name="NgaySinh" required class="form-control">
                </div>
            </div>
            @{
                var lstGioiTinh = new List<SelectListItem>
                    ()
                {
                new SelectListItem()
                {
                Text ="Nam",
                Value ="Nam"
                },
                new SelectListItem()
                {
                Text = "Nữ",
                Value = "Nữ"
                }
                };

                <div class="form-group mb-3">
                    <label for="GioiTinh" class="form-label"> Giới tính: </label>
                    @Html.DropDownList("GioiTinh", lstGioiTinh, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GioiTinh, "", new { @class = "text-danger" })
                </div>}
            <div class="form-group mb-3">
                <label for="Email" class="form-label"> Email:</label>
                <input type="email" id="Email" name="Email" required class="form-control" placeholder="abc@gmail.com">
            </div>
            <div class="form-group mb-3">
                <label for="DiaChi" class="form-label"> Địa chỉ:</label>
                <textarea class="form-control" id="DiaChi" name="DiaChi" rows="2" required></textarea>

            </div>
            @{
                var lstPhongBan = new List<SelectListItem>
                    ()
                        {
                        new SelectListItem()
                        {
                        Text ="Phòng kinh doanh",
                        Value ="Phòng kinh doanh"
                        },
                        new SelectListItem()
                        {
                        Text = "Phòng dịch vụ",
                        Value = "Phòng dịch vụ"
                        },
                        new SelectListItem()
                        {
                        Text = "Kho",
                        Value = "Kho"
                        }
                        };

                <div class="form-group mb-3">
                    <label for="PhongBan" class="form-label">Phòng ban: </label>
                    @Html.DropDownList("PhongBan", lstPhongBan, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.PhongBan, "", new { @class = "text-danger" })
                </div>}
            @{
                var lstChucVu = new List<SelectListItem>
                    ()
                    {
                    new SelectListItem()
                    {
                    Text ="Nhân viên tiếp thị",
                    Value ="Nhân viên tiếp thị"
                    },
                    new SelectListItem()
                    {
                    Text = "Nhân viên sửa xe",
                    Value = "Nhân viên sửa xe"
                    },
                    new SelectListItem()
                    {
                    Text = "Trưởng phòng",
                    Value = "Trưởng phòng"
                    },
                    new SelectListItem()
                    {
                    Text = "Thủ kho",
                    Value = "Thủ kho"
                    },
                    new SelectListItem()
                    {
                    Text = "Quản lý kho",
                    Value = "Quản lý kho"
                    }
                    };

                <div class="form-group mb-3">
                    <label for="ChucVu" class="form-label"> Chức vụ: </label>
                    @Html.DropDownList("ChucVu", lstChucVu, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ChucVu, "", new { @class = "text-danger" })
                </div>}

        </div>

        <div class="row" style="padding-bottom:10px;">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="row" style="margin:auto">
                    <div class="col-4">
                        @Html.ActionLink("< Quay về", "LayDanhSachNhanVien", null, new { @class = "btn-back" })
                    </div>
                    <div class="col-4" style="text-align:center">
                        <input type="submit" value="Tạo hồ sơ nhân viên" class="btn btn-primary" />
                    </div>
                    <div class="col-4"></div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>

    }
</div>
