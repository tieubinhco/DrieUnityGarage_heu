@model DrieUnityGarage.Models.CT_TRAGOP
@{
    ViewBag.Title = "CTTG_TaoCT";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />
<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-12" style="text-align:center; ">
            <h2>CẬP NHẬT TRẢ GÓP</h2>
        </div>
    </div>

    @using (Html.BeginForm("CTTG_TaoCT","TRAGOP"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="container col-7" style="margin-top: 10px; font-size:17px;">
    <hr />
    <div class="form-group mb-3">
        <label for="MaTG" class="form-label"> Mã phiếu đăng ký: </label>
        <input class="form-control" id="MaTG" value="@ViewBag.MaTG" disabled />
    </div>
    <div class="form-group mb-3">
        <label for="NgayTra" class="form-label"> Ngày trả: </label>
        <div class="col-12">
            <input type="date" id="NgayTra" name="NgayTra" required class="form-control">
        </div>
    </div>
    <div class="form-group mb-3">
        <label class="form-label" for="lstMaHD"> Chọn phiếu thu: [Mã phiếu thu]</label>
        @Html.DropDownList("lstMaPT", null, htmlAttributes: new { @class = "form-control" })
    </div>
</div>

        <div class="row" style="padding-bottom:10px;">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="row" style="margin:auto">
                    <div class="col-4">
                        @Html.ActionLink("< Quay về", "CTTG_LayDSThongTin", new { id = Session["MaTG"].ToString() }, new { @class = "btn-back" })
                    </div>
                    <div class="col-4" style="text-align:center">
                        <input type="submit" value="Cập nhật trả góp" class="btn btn-primary" />
                    </div>
                    <div class="col-4"></div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>

    }
</div>

