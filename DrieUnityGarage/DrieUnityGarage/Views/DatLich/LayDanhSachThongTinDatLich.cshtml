@model IEnumerable<DrieUnityGarage.Models.DATLICH>
@{
    ViewBag.Title = "LayDanhSachThongTinDatLich";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-5">
            <h2>Danh sách khách hàng đã đặt lịch</h2>
        </div>
        <div class="col-lg-5">
        </div>
        <div class="col-lg-2">
            @Html.ActionLink("Tạo mới", "TaoThongTinDatLich", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <table class="table index-table" style="margin-top:20px;">
        <tr>
            <th>
                Mã đặt lịch
            </th>
            <th>
                Ngày lập
            </th>
            <th>
                Mã khách hàng
            </th>
            <th>
                Biển số xe
            </th>
            <th>
                Tình trạng xe
            </th>
            <th>
                Ngày hẹn
            </th>
 
            <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaDL)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayLap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DL_MaKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DL_BienSoXe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TinhTrangXe)   
                </td>
                <td>
                    @String.Format("{0:dd/MM/yyyy}", item.NgayHen)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "SuaThongTinDatLich", new { id = item.MaDL }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "LayThongTinDatLich", new { id = item.MaDL }, new { @class = "btn btn-details" })
                </td>
                <td>
                    @Html.ActionLink("Xoá", "XoaThongTinDatLich", new { id = item.MaDL, check = 1 }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
