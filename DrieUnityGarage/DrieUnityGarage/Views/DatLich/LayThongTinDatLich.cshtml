@model DrieUnityGarage.Models.DATLICH
@{
    ViewBag.Title = "LayThongTinDatLich";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />
<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-12" style="text-align:center">
            <h2>Chi tiết thông tin đặt lịch</h2>
        </div>
    </div>
    <div class="container col-6" style="margin-top: 10px; font-size:17px;">
        <hr />
        <div class="form-group mb-3">
            <label for="TN_MaKH" class="form-label"> Khách hàng: </label>
            <div class="col-12 form-control">
                @Html.DisplayFor(model => model.DL_MaKH)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="TN_BienSoXe" class="form-label"> Biển số xe: </label>
            <div class="col-12 form-control">
                @Html.DisplayFor(model => model.DL_BienSoXe)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="ThoiGianTiepNhan" class="form-label"> Ngày Lập: </label>
            <div class="col-12 form-control">
                @String.Format("{0: HH:mm:ss, dd/MM/yyyy}", @Model.NgayLap)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="ThoiGianGiaoDuKien" class="form-label"> Ngày hẹn: </label>
            <div class="col-12 form-control">
                @String.Format("{0: dd/MM/yyyy}", @Model.NgayHen)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="GhiChuKH" class="form-label"> Ghi chú của khách hàng: </label>
            <textarea class="col-12 form-control" rows="3" disabled style="background-color:white">@Model.GhiChuKH.Trim()</textarea>
        </div>


    </div>
    <div class="row" style="padding-bottom:10px;">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row" style="margin:0">
                <div class="col-4">
                    @Html.ActionLink("< Quay về", "LayDanhSachThongTinDatLich", null, new { @class = "btn-back" })
                </div>
                <div class="col-4" style="text-align:center">
                    @Html.ActionLink("Chỉnh sửa thông tin", "SuaThongTinDatLich", new { id = Model.MaDL }, new { @class = "btn btn-success" })
                </div>
                <div class="col-4"></div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>

</div>

