@model DrieUnityGarage.Models.XUATKHO

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-12" style="text-align:center; ">
            <h2>Thêm hoá đơn</h2>
        </div>
    </div>
    @using (Html.BeginForm("Partial_TaoXK_ThemChiTietPhieuXK", "XUATKHO"))
    {
        <p style="font-size:20px; font-weight:bold">THÔNG TIN CHUNG:</p>
        <div class="row " style="margin: 0; margin-top: 10px; font-size: 17px;">
            <div class="form-group mb-3 col-4">
                <label for="MaXK" class="form-label"> Mã phiếu xuất kho: </label>
                <input class="form-control w-75" id="MaXK" name="MaXK" readonly value="@ViewBag.MaXK" />
            </div>
            <div class="form-group mb-3 col-4">
                <label for="NgayLap" class="form-label"> Thời gian lập: </label>
                <input class="form-control w-75" id="NgayLap" name="NgayLap" readonly value="@ViewBag.NgayLap" />

            </div>
            <div class="form-group mb-3 col-4">
                <label for="MaNV" class="form-label"> Nhân viên thực hiện: </label>
                <input class="form-control w-75" id="MaNV" name="MaNV" readonly value="@ViewBag.MaNV " />
            </div>
        </div>
        <div class="row " style="margin: 0; margin-top: 10px; font-size: 17px;">
            <div class="form-group mb-3 col-4">
                <label for="MaBG" class="form-label"> Báo giá yêu cầu xuất kho: </label>
                <input class="form-control w-75" id="MaBG" name="MaBG" disabled value="Không có" />
            </div>
            <div class="form-group mb-3 col-4">
                <label for="LyDoXuat" class="form-label"> Lý do xuất kho: </label>
                <textarea class="form-control w-75" id="LyDoXuat" name="LyDoXuat" rows="1" required>@ViewBag.LyDoXuat</textarea>
            </div>
            <div class="form-group mb-3 col-4">
                <label for="SoCT" class="form-label"> Số chứng từ kèm theo (nếu có): </label>
                <input class="form-control w-75" id="SoCT" name="SoCT" value="@ViewBag.SoCT" />
            </div>
        </div>

        <p style="font-size:20px; font-weight:bold; margin-top:10px;">CHI TIẾT XUẤT KHO:</p>
        <div class="row">
            <div class="col-lg-9">
                @Html.Action("Partial_TaoXK_LayChiTietPhieuXK", "XUATKHO")
            </div>
            <div class="col-lg-3">
                @Html.Action("Partial_TaoXK_ThemChiTietPhieuXK", "XUATKHO")
            </div>
        </div>
    }
    <div class="row" style="padding-bottom:10px;">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row" style="margin:auto">
                <div class="col-4">
                    @Html.ActionLink("< Quay về", "Index", null, new { @class = "btn-back" })
                </div>

                <div class="col-4" style="text-align:center">
                    @using (Html.BeginForm("Create", "XUATKHO"))
                    {
                        @Html.AntiForgeryToken()

                        <input type="submit" value="Tạo phiếu" class="btn btn-primary" />}
                </div>
                <div class="col-4"></div>
            </div>
        </div>
    </div>
</div>
