@model List<DrieUnityGarage.Models.THONGTINSANPHAM>

<link rel="stylesheet" href="~/Content/TaoHoaDon.css" />
<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />
<table class="table index-table" style="margin-top:20px;">
    <tr>
        <th>
            Mã
        </th>
        <th>
            Tên
        </th>
        <th>
            ĐVT
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Thành tiền
        </th>

    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("CTDH_CapNhatSoLuong", "HOADON", new { id = item.MaSP }))
        {

            <tr>
                <td>
                    @item.MaSP
                </td>
                <td>
                    @item.TenSP
                </td>

                <td>
                    @item.DonViTinh
                </td>

                <td>

                    @item.SoLuong
                </td>


                <td>
                    @String.Format("{0:0,0}", item.DonGia)

                </td>

                <td>
                    @String.Format("{0:0,0}", item.FinalPrice())

                </td>
            </tr>

        }
    }
    @if (Session["lstSPHD"] != null)
    {
        <tr style="font-weight:bold">
            <td>
                Tổng
            </td>
            <td colspan="2"></td>

            <td class="soluong">@ViewBag.TotalNumber</td>
            <td></td>
            <td class="tongthanhtoan">
                @String.Format("{0:0,0}", @ViewBag.TotalPrice)
            </td>
            <td colspan="2"></td>

        </tr>



    }

</table>



