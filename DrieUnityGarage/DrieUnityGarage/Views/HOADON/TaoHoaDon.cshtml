@model DrieUnityGarage.Models.HOADON

@{
    ViewBag.Title = "Tạo hoá đơn";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6" style="text-align:center">
            <h2>Thêm hoá đơn</h2>
        </div>
        <div class="col-lg-3"></div>
    </div>

    <p style="font-size:20px; font-weight:bold">Thông tin chung:</p>

    @using (Html.BeginForm("TaoHoaDon", "HOADON"))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
<div class="row" style="font-size:17px; margin:0">
    <div class="col-lg-4" style="padding-left:50px">
        Mã hoá đơn:
        <div class="form-control" style="display:inline;">@ViewBag.MaHD</div>
    </div>
    <div class="col-lg-4">
        Ngày lập hoá đơn:
        <div class="form-control" style="display:inline">
            @ViewBag.NgayLapHD
        </div>
    </div>
    @if (Session["CheckTN"] == null)
    {

        <div class="dis-inline col-lg-3" style="margin-top:-6PX">
            Mã tiếp nhận:
            @Html.DropDownList("HD_MaTN", null, htmlAttributes: new { @class = "dis-inline form-maTN " })
            @Html.ValidationMessageFor(model => model.HD_MaTN, "", new { @class = "text-danger" })
        </div>


        <div class="dis-inline col-lg-1" style="margin-top:-6px">
            <input type="submit" value="Lấy dữ liệu" class="btn btn-primary" />
        </div>
    }
    else
    {
          <div class="col-lg-4">
            Mã tiếp nhận:
            <div class="form-control" style="display:inline">
                @ViewBag.MaTN
            </div>
        </div>


    }
</div>
    }
    <div class="row" style="margin-top: 30px; font-size: 17px; margin-left:0; margin-right:0">

        @if (Session["CheckTN"] != null)
        {
            <div class="col-lg-4" style="padding-left:50px">
                Khách hàng:
                <div class="form-control" style="display:inline">@ViewBag.KhachHang</div>
            </div>
            <div class="col-lg-4">
                Số điện thoại: <div class="form-control" style="display:inline">@ViewBag.SDT </div>

            </div>
            <div class="col-lg-4" style="margin-left:0; margin-right:0px">
                Nhân viên:
                <div class="form-control" style="display:inline">@ViewBag.NhanVien </div>
            </div>
        }
    </div>


    <div class="row" style="margin-top:40px">
        <div class="col-lg-9">
            @Html.Action("Partial_LayChiTietHoaDonList", "HOADON")

        </div>
        <div class="col-lg-3">

            @Html.Action("Partial_ThemChiTietHoaDon", "HOADON")


        </div>
    </div>
    <div class="row" style="margin-top:15px">
        <div class="col-lg-5 align-bottom">
            @Html.ActionLink("< Quay về", "LayDanhSachHoaDon", null, new { @class = "nonedecor" })
        </div>
        @using (Html.BeginForm("CTDH_TaoHoaDon", "HOADON"))
        {
            <div class="col-lg-7">

                <input type="submit" value="Tạo mới" class="btn btn-info create-btn" />

            </div>}
    </div>
</div>




