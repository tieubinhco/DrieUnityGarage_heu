@model IEnumerable<DrieUnityGarage.Models.HOADON>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/HoaDon_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-5">
            <h2>Danh sách hoá đơn </h2>
        </div>
        <div class="col-lg-5">
        </div>
        <div class="col-lg-2">
            @Html.ActionLink("Tạo mới", "TaoHoaDon", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <table class="table">
        <tr>
            <th>
                Ngày lập
            </th>
            <th>
                Tổng thanh toán
            </th>
            <th>
                Mã tiếp nhận hoá đơn
            </th>
            <th>
                Họ tên khách hàng
            </th>
            <th>
                Số máy
            </th>
            <th>
                Thông tin thanh toán (Mã khách hàng)
            </th>
            <th>
                Thông tin tiếp nhận (Mã khách hàng)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NgayLap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TongThanhToan)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HD_MaTN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KHACHHANG.HoTenKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PHUONGTIEN.BienSoXe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.THONGTINTHANHTOAN.TT_MaKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.THONGTINTIEPNHAN.TN_MaKH)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "CapNhatHoaDon", new { id = item.MaHD }, new { @class = "btn btn-success" })

                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "XemChiTietHoaDon", new { id = item.MaHD }, new { @class = "btn btn-danger" })

                </td>
                <td>
                    @Html.ActionLink("Xoá", "XoaHoaDon", new { id = item.MaHD }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>
