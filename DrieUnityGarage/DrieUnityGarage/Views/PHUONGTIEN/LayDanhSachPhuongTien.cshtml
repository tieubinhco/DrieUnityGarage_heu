@model IEnumerable<DrieUnityGarage.Models.PHUONGTIEN>

@{
    ViewBag.Title = "LayDanhSachPhuongTien";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-5">
            <h2>Danh sách phương tiện</h2>
        </div>
        <div class="col-lg-5">
        </div>
        <div class="col-lg-2">
            @Html.ActionLink("Tạo mới", "TaoThongTinPhuongTien", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <table class="table index-table" style="margin-top:20px;">
        <tr>
            <th>
                Biển số xe
            </th>
            <th>
                Số KM
            </th>
            <th>
                Loại xe
            </th>
            <th>
                Màu xe
            </th>
            <th>
                Khách hàng
            </th>
            <th width="10%"></th>
            <th width="10%"></th>
            <th width="10%"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BienSoXe)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.SoKM)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LoaiXe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MauXe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KHACHHANG.MaKH) - @Html.DisplayFor(modelItem => item.KHACHHANG.HoTenKH)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "SuaThongTinPhuongTien", new { id = item.BienSoXe }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "LayThongTinPhuongTien", new { id = item.BienSoXe }, new { @class = "btn btn-details" })
                </td>
                <td>
                    @Html.ActionLink("Xoá", "XoaThongTinPhuongTien", new { id = item.BienSoXe, check=1 }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
