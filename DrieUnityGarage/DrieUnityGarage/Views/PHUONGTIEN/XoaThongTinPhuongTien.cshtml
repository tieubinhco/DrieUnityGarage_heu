@model DrieUnityGarage.Models.PHUONGTIEN

@{
    ViewBag.Title = "XoaThongTinPhuongTien";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-12" style="text-align:center">
            <h2 style="color: red">Xác nhận xoá phương tiện</h2>
        </div>
    </div>

    <div class="container col-6" style="margin-top: 10px; font-size:17px;">
        <p style="font-weight:500; color:red; font-size:18px; text-align:center">@ViewBag.ThongBao</p>

        <hr />
        <div class="form-group mb-3">
            <label for="MaHH" class="form-label"> Mã phiếu thu: </label>
            <input class="form-control" id="MaHH" value="@Model.BienSoXe" readonly />
        </div>
        <div class="form-group mb-3">
            <label for="MaHH" class="form-label"> Số máy: </label>
            <input class="form-control" id="MaHH" value="@Model.SoMay" readonly />
        </div>
        <div class="form-group mb-3">
            <label for="MaHH" class="form-label"> Số KM: </label>
            <input class="form-control" id="MaHH" value="@Model.SoKM" readonly />
        </div>
        <div class="form-group mb-3">
            <label for="LoaiXe" class="form-label"> Loại xe: </label>
            <input class="form-control" id="MaHH" value="@Model.LoaiXe" readonly />
        </div>
        <div class="form-group mb-3">
            <label for="Model" class="form-label"> Model: </label>
            <input class="form-control" id="MaHH" value="@Model.Model" readonly />
        </div>
        <div class="form-group mb-3">
            <label for="Model" class="form-label"> Màu xe: </label>
            <input class="form-control" id="MaHH" value="@Model.MauXe" readonly />
        </div>
        <div class="form-group mb-3">
            <label for="Model" class="form-label"> Model: </label>
            <input class="form-control" id="MaHH" value="@Model.PT_MaKH" readonly />
        </div>
    </div>
    @using (Html.BeginForm("XoaThongTinPhuongTien", "PHUONGTIEN"))
    {@Html.AntiForgeryToken()
    <div class="row" style="padding-bottom:10px;">
        <div class="col-3"></div>
        <div class="col-6">
            <div class="row" style="margin:0">

                <div class="col-4">
                    @Html.ActionLink("< Quay về", "LayDanhSachPhuongTien", null, new { @class = "btn-back" })
                </div>
                <div class="col-4" style="text-align:center">
                    @{
                        <input type="submit" value="Xác nhận xoá" class="btn btn-danger" onclick="clicked(event)" />
                        <script>
                                    function clicked(e) {
                                        if (!confirm('Xác nhận xoá phương tiện?')) {
                                            e.preventDefault();
                                        }
                                       
                                    }</script>
                    }
                </div>
                <div class="col-4"></div>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
}
</div>