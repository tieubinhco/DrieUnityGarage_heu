@model DrieUnityGarage.Models.PHUONGTIEN

@{
    ViewBag.Title = "SuaThongTinPhuongTien";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-12" style="text-align:center">
            <h2>Chỉnh sửa thông tin phương tiện</h2>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container col-6" style="margin-top: 10px; font-size:17px;">

            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group mb-3">
                <label for="MaHH" class="form-label"> Biển số xe: </label>
                @Html.EditorFor(model => model.BienSoXe, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                @Html.ValidationMessageFor(model => model.BienSoXe, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                <label for="MaHH" class="form-label"> Số máy: </label>
                @Html.EditorFor(model => model.SoMay, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                @Html.ValidationMessageFor(model => model.SoMay, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                <label for="MaHH" class="form-label"> Số khung: </label>
                @Html.EditorFor(model => model.SoKhung, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                @Html.ValidationMessageFor(model => model.SoKhung, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                <label for="MaHH" class="form-label"> Số KM: </label>
                @Html.EditorFor(model => model.SoKM, new { htmlAttributes = new { @class = "form-control", @type = "number" } })
                @Html.ValidationMessageFor(model => model.SoKM, "", new { @class = "text-danger" })
            </div>
            @{
                var lstDVT = new List<SelectListItem>
                    ()
        {
                new SelectListItem()
                {
                Text ="4 chỗ",
                Value ="4 chỗ"
                },
                new SelectListItem()
                {
                Text = "7 chỗ",
                Value = "7 chỗ"
                },
                new SelectListItem()
                {
                Text = "16 chỗ",
                Value = "16 chỗ"
                }
                };

                <div class="form-group mb-3">
                    <label for="LoaiXe" class="form-label"> Loại xe: </label>
                    @Html.DropDownList("LoaiXe", lstDVT, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.LoaiXe, "", new { @class = "text-danger", @required = "true" })
                </div> }
            <div class="form-group mb-3">
                <label for="Model" class="form-label"> Model: </label>
                @Html.EditorFor(model => model.Model, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                @Html.ValidationMessageFor(model => model.Model, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                <label for="Model" class="form-label"> Màu xe: </label>
                @Html.EditorFor(model => model.MauXe, new { htmlAttributes = new { @class = "form-control", @required = "true" } })
                @Html.ValidationMessageFor(model => model.MauXe, "", new { @class = "text-danger" })
            </div>
            <div class="form-group mb-3">
                <label for="Model" class="form-label"> Chọn khách hàng: </label>
                <div class="col-12">
                    @Html.DropDownList("lstMaKH", null, htmlAttributes: new { @class = "form-control ", @required = "true" })
                    @Html.ValidationMessageFor(model => model.PT_MaKH, "", new { @class = "text-danger" })
                </div>
            </div>

        </div>

        <div class="row" style="padding-bottom:10px;">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="row" style="margin:auto">
                    <div class="col-4">
                        @Html.ActionLink("< Quay về", "LayDanhSachPhuongTien", null, new { @class = "btn-back" })
                    </div>
                    <div class="col-4" style="text-align:center">
                        <input type="submit" value="Lưu chỉnh sửa" class="btn btn-success" />
                    </div>
                    <div class="col-4"></div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>
    }

</div>
