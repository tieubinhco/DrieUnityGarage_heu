@model DrieUnityGarage.Models.BAOCAOTONKHO

@{
    ViewBag.Title = "Tạo báo cáo tồn kho";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />
<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-12" style="text-align:center; ">
            <h2>Tạo báo cáo tồn kho</h2>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="container col-6" style="margin-top: 10px; font-size:17px;">
            <div class="form-group mb-3">
                <label for="MaBCTK" class="form-label"> Mã báo cáo tồn kho: </label>
                <div class="form-control" id="MaHH">@ViewBag.MaBC</div>
            </div>
            <div class="form-group mb-3">
                <label for="NgayLap" class="form-label"> Ngày lập báo cáo: </label>
                <div class="form-control" id="MaHH">@ViewBag.NgayLap</div>
            </div>
            <div class="form-group mb-3">
                <label for="MaNV" class="form-label">  Nhân viên thực hện: </label>
                <div class="form-control" id="MaHH">@ViewBag.NhanVien</div>
            </div>
        </div>
        <p style="font-size:20px; font-weight:bold; margin-top:20px; text-align:center">CHI TIẾT BÁO CÁO</p>

        <div class="row" style="margin-top:30px;">
            <div class="col-2"></div>
            <div class="col-8">
                @Html.Action("Partial_TaoBC_ChiTietBaoCao", "BAOCAOTONKHO")
            </div>
            <div class="col-2"></div>
        </div>
        <div class="row" style="padding-bottom:10px; margin-top:20px">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="row" style="margin:auto">
                    <div class="col-4">
                        @Html.ActionLink("< Quay về", "LayDanhSachBaoCaoTonKho", null, new { @class = "btn-back" })
                    </div>

                    <div class="col-4" style="text-align:center">

                        <input type="submit" value="Tạo báo cáo" class="btn btn-primary" />
                    </div>
                    <div class="col-3">

                    </div>
                </div>
            </div>
        </div>
    }
</div>
