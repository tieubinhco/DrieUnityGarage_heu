@model IEnumerable<DrieUnityGarage.Models.DANHGIATINHTRANG>

@{
    ViewBag.Title = "Danh sách phiếu đánh giá tình trạng xe";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-6">
            <h2>Danh sách phiếu đánh giá tình trạng xe</h2>
        </div>
        <div class="col-lg-4">
        </div>
        <div class="col-lg-2">
            @Html.ActionLink("Tạo mới", "TaoDanhGiaTinhTrang", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <table class="table index-table" style="margin-top:20px;">
        <tr>
            <th>
                Mã phiếu
            </th>

            <th>
                Ngày lập
            </th>
            <th>
                Mã tiếp nhận
            </th>
            <th>
                Biển số xe
            </th>

            <th>
                Khách hàng
            </th>
            <th>
                Nhân viên phụ trách
            </th>
            <th></th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaDG)
                </td>
                <td>
                    @String.Format("{0:dd/MM/yyyy}", item.NgayLap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.THONGTINTIEPNHAN.MaTN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.THONGTINTIEPNHAN.TN_BienSoXe)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.THONGTINTIEPNHAN.TN_MaKH)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.THONGTINTIEPNHAN.TN_MaNV)

                </td>
                <td>
                    @Html.ActionLink("Sửa", "SuaDanhGiaTinhTrang", new { id = item.MaDG }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "LayThongTinDanhGiaTinhTrang", new { id = item.MaDG }, new { @class = "btn btn-details" })
                </td>
                <td>
                    @Html.ActionLink("Xoá", "XoaDanhGiaTinhTrang", new { id = item.MaDG, check = 1 }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
