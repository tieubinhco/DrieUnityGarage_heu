@model DrieUnityGarage.Models.THONGTINTHANHTOAN
@{
    ViewBag.Title = "SuaThongTinThanhToan";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-3"></div>
        <div class="col-lg-6" style="text-align:center">
            <h2>Sửa thông tin phản hồi</h2>
        </div>
        <div class="col-lg-3"></div>
    </div>
    <div class="container col-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal form-decor">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group mb-3">
                    <label for="MaTT" class="form-label"> Mã thanh toán: </label>
                    <div class="form-control" id="MaTiepNhan">@ViewBag.MaTT</div>
                </div>
                <div class="form-group mb-3">
                    <label for="NgayTT" class="form-label"> Ngày Thanh Toán: </label>
                    <div class="form-control" id="MaTiepNhan">@ViewBag.NgayTT</div>
                </div>

                <div class="form-group space-field">
                    Mã hoá đơn:
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.TT_MaHD, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TT_MaHD, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group space-field">
                    Hình thức thanh toán:
                    <div class="col-md-12">
                        @Html.EditorFor(model => model.HinhThuc, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.HinhThuc, "", new { @class = "text-danger" })
                    </div>
                </div>


                <div class="form-group" style="margin-top:40px">
                    <div class="row">
                        <div class="col-lg-5 align-bottom">
                            @Html.ActionLink("< Quay về", "LayDanhSachThongTinThanhToan", null, new { @class = "nonedecor" })
                        </div>
                        <div class="col-lg-7">
                            @*                        <input type="submit" value="Tạo mới" class="btn btn-info create-btn" />*@
                            @Html.ActionLink("Sửa", "LayDanhSachThongTinThanhToan", new { @class = "nonedecor" })
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>

