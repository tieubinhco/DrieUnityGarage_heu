@model DrieUnityGarage.Models.DANHGIADICHVU
@{
    ViewBag.Title = "ThemPhanHoiDichVu";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />
<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-12" style="text-align:center; ">
            <h2>Thêm phản hồi mới</h2>
        </div>
    </div>
    @using (Html.BeginForm("ThemPhanHoiDichVu", "PHANHOIDICHVU"))
    {

        <div class="container col-6" style="margin-top: 10px; font-size:17px;">
            <hr />

            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-3">
                <label for="MaHH" class="form-label"> Mã đánh giá: </label>
                <div class="form-control" id="MaHH">@ViewBag.MaDGDV</div>
            </div>
            <div class="mb-3">
                <label for="NgayLap" class="form-label"> Ngày lập: </label>
                <div class="form-control" id="ThoiGianTiepNhan">@ViewBag.NgayLap</div>
            </div>
            <div class="form-group mb-3">
                <label for="DGDV_MaTN" class="form-label"> Mã tiếp nhận: </label>
                @Html.DropDownList("lstMaTN", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DGDV_MaTN, "", new { @class = "text-danger" })
            </div>
            <table class="table index-table" style="margin-top:20px;">
                <tr>
                    <td>
                        Mức độ chất lượng
                    </td>
                    <td>
                        <input type="radio" name="MucDoChatLuong" value="1" />Rất tệ
                    </td>
                    <td>
                        <input type="radio" name="MucDoChatLuong" value="2" />Tệ
                    </td>
                    <td>
                        <input type="radio" name="MucDoChatLuong" value="3" />Bình thường
                    </td>
                    <td>
                        <input type="radio" name="MucDoChatLuong" value="4" />Tốt
                    </td>
                    <td>
                        <input type="radio" name="MucDoChatLuong" value="5" />Rất tốt
                    </td>
                </tr>
                <tr>
                    <td>
                        Mức độ dịch vụ
                    </td>
                    <td>
                        <input type="radio" name="MucDoDichVu" value="1" />Rất tệ
                    </td>
                    <td>
                        <input type="radio" name="MucDoDichVu" value="2" />Tệ
                    </td>
                    <td>
                        <input type="radio" name="MucDoDichVu" value="3" />Bình thường
                    </td>
                    <td>
                        <input type="radio" name="MucDoDichVu" value="4" />Tốt
                    </td>
                    <td>
                        <input type="radio" name="MucDoDichVu" value="5" />Rất tốt
                </tr>
                <tr>
                    <td>
                        Mức độ thái độ
                    </td>
                    <td>
                        <input type="radio" name="MucDoThaiDo" value="1" />Rất tệ
                    </td>
                    <td>
                        <input type="radio" name="MucDoThaiDo" value="2" />Tệ
                    </td>
                    <td>
                        <input type="radio" name="MucDoThaiDo" value="3" />Bình thường
                    </td>
                    <td>
                        <input type="radio" name="MucDoThaiDo" value="4" />Tốt
                    </td>
                    <td>
                        <input type="radio" name="MucDoThaiDo" value="5" />Rất tốt
                    </td>
                </tr>
            </table>
            <div class="mb-4">
                <label class="form-label" for="GopYKhac"> Góp ý khác: </label>
                @Html.TextAreaFor(m => m.GopYKhac, 3, 1, new { @class = "form-control" })
            </div>
        </div>

        <div class="row" style="padding-bottom:10px;">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="row" style="margin:auto">   
                    <div class="col-4">
                        @Html.ActionLink("< Quay về", "LayDanhSachPhanHoiDichVu", null, new { @class = "btn-back" })
                    </div>
                    <div class="col-4" style="text-align:center">
                        <input type="submit" value="Tạo phản hồi" class="btn btn-primary" />
                    </div>
                    <div class="col-4"></div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>
    }
</div>
