@model IEnumerable<DrieUnityGarage.Models.DANHGIADICHVU>
@{
    ViewBag.Title = "LayDanhSachPhanHoiDichVu";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}


<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />

<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-5">
            <h2>Danh sách đánh giá dịch vụ</h2>
        </div>
        <div class="col-lg-5">
        </div>
        <div class="col-lg-2">
            @Html.ActionLink("Tạo mới", "ThemPhanHoiDichVu", null, new { @class = "btn btn-primary" })
        </div>
    </div>
    <table class="table index-table" style="margin-top:20px;">
        <tr>
            <th>
                Mã đánh giá
            </th>
            <th>
                Ngày lập
            </th>
            <th>
                Mã tiếp nhận
            </th>
            <th>
                Mức độ dịch vụ
            </th>
            <th>
                Mức độ thái độ
            </th>
            <th>
                Mức độ chất lượng
            </th>
            <th>
                Góp ý khác
            </th>

            <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.MaDGDV)
                </td>
                <td>
                    @String.Format("{0:dd/MM/yyyy}", item.NgayLap)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DGDV_MaTN)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MucDoDichVu) <span>sao</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MucDoThaiDo) <span>sao</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MucDoChatLuong) <span>sao</span>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GopYKhac)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "SuaThongTinPhanHoiDV", new { id = item.MaDGDV }, new { @class = "btn btn-success" })
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "LayThongTinPhanHoiDichVu", new { id = item.MaDGDV }, new { @class = "btn btn-details" })
                </td>
                <td>
                    @Html.ActionLink("Xoá", "XoaThongTinPhanHoiDV", new { id = item.MaDGDV, check = 1 }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>

