@model DrieUnityGarage.Models.BAOHANH
@{
    ViewBag.Title = "XoaThongTinBaoHanh";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />
<div class="container-fluid" style="margin-top:30px; padding-left:30px; padding-right:30px">
    <div class="row">
        <div class="col-lg-12" style="text-align:center">
            <h2 style="color: red">Xác nhận xoá thông tin</h2>
        </div>
    </div>
    <div class="container col-6" style="margin-top: 10px; font-size:17px;">
        <p style="font-weight:500; color:red; font-size:18px; text-align:center">@ViewBag.ThongBao</p>
        <hr />

        <div class="form-group mb-3">
            <label for="DL_MaKH" class="form-label"> Khách hàng: </label>
            <div class="col-12 form-control">
                @Html.DisplayFor(model => model.BH_MaKH)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="DL_BienSoXe" class="form-label"> Biển số xe: </label>
            <div class="col-12 form-control">
                @Html.DisplayFor(model => model.BH_BienSoXe)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="DL_BienSoXe" class="form-label"> Mã hàng hoá: </label>
            <div class="col-12 form-control">
                @Html.DisplayFor(model => model.BH_MaHH)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="ThoiGianBatDau" class="form-label"> Thời gian bắt đầu: </label>
            <div class="col-12 form-control">
                @String.Format("{0: HH:mm:ss, dd/MM/yyyy}", @Model.ThoiGianBatDau)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="ThoiGianKetThuc" class="form-label"> Thời gian kết thúc: </label>
            <div class="col-12 form-control">
                @String.Format("{0: HH:mm:ss, dd/MM/yyyy}", @Model.ThoiGianKetThuc)
            </div>
        </div>
        <div class="form-group mb-3">
            <label for="NoiBaoHanh" class="form-label"> Nơi bảo hành: </label>
            <textarea class="col-12 form-control" rows="3" disabled style="background-color:white">@Model.NoiBaoHanh</textarea>
        </div>
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="row" style="padding-bottom:10px;">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="row" style="margin:0">
                    <div class="col-4">
                        @Html.ActionLink("< Quay về", "LayDanhSachThongTinBaoHanh", null, new { @class = "btn-back" })
                    </div>
                    <div class="col-4" style="text-align:center">
                        @{
                            <input type="submit" value="Xác nhận xoá" class="btn btn-danger" onclick="clicked(event)" />
                            <script>
                                    function clicked(e) {
                                        if (!confirm('Xác nhận xoá thông tin bảo hành?')) {
                                            e.preventDefault();
                                        }

                                    }</script>
                        }
                    </div>
                    <div class="col-4"></div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>
    }
</div>
