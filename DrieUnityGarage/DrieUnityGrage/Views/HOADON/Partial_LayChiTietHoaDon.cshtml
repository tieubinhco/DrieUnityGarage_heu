@model List<DrieUnityGrage.Models.SanPham>

<link rel="stylesheet" href="~/Content/TaoHoaDon.css" />
<link href="~/Content/bootstrap5/css/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/NCC_Index.css" />
<p class="tr-chitiethd">CHI TIẾT HOÁ ĐƠN</p>
<table class="table index-table" style="margin-top:20px;">
    <tr>
        <th>
            Mã
        </th>
        <th>
            Tên
        </th>
        <th>
            ĐVT
        </th>
        <th>
            Số lượng
        </th>
        <th>
            Đơn giá
        </th>
        <th>
            Thành tiền
        </th>
        <th>

        </th>
        <th>

        </th>
    </tr>

    @foreach (var item in Model)
    {
        using (Html.BeginForm("CTDH_CapNhatSoLuong", "HOADON", new { id = item.MaSP }))
        {

            <tr>
                <td>
                    @item.MaSP
                </td>
                <td>
                    @item.TenSP
                </td>

                <td>
                    @item.DonViTinh
                </td>

                <td>

                    <input type="number" min="1" name="changequantity" value="@item.SoLuong"
                           data-id="@item.MaSP" class="quantity quantity-form" />
                </td>


                <td>
                    @String.Format("{0:0,0}", item.DonGia)

                </td>

                <td>
                    @String.Format("{0:0,0}", item.FinalPrice())

                </td>
                <td><input type="submit" value="Cập nhật" class="btn btn-warning" /></td>

                <td>
                    @Html.ActionLink("Xoá", "CTDH_XoaSP", new { id = item.MaSP },
                                   new { @class = "btn btn-danger" })
                </td>
            </tr>

        }
    }
    @if (Session["lstSPHD"] != null)
    {
        <tr style="font-weight:bold">
            <td>
                Tổng
            </td>
            <td colspan="2"></td>

            <td class="soluong">@ViewBag.TotalNumber</td>
            <td></td>
            <td class="tongthanhtoan">
                @String.Format("{0:0,0}", @ViewBag.TotalPrice)
            </td>
            <td colspan="2"></td>

        </tr>



    }

</table>


